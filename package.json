{
  "name": "starshade-syntax-highlighting",
  "displayName": "StarShade Syntax Highlighting",
  "description": "Adds Syntax and Compiling methods to add StarShade to VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./src/lang.ts",
  "contributes": {
    "commands": [
      {
        "command": "star-shade.set_exe",
        "title": "Set StarShade Compiler"
      },

      {
        "command": "star-shade.compile",
        "title": "Compile into HLSL"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "star-shade.set_exe",
          "when": "editorLangId == star-shade"
        },

        {
          "command": "star-shade.compile",
          "when": "editorLangId == star-shade"
        }
      ]
    },
    "languages": [{
      "id": "star-shade",
      "aliases": ["StarShade", "star-shade"],
      "extensions": [".star"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "star-shade",
      "scopeName": "source.star",
      "path": "./syntaxes/star-shade.tmLanguage.json"
    }]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
