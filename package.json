{
  "name": "chinstrap-tools",
  "displayName": "Chinstrap Tools",
  "description": "Adds Syntax Highlighting and in-editor compilation to add Chinstrap to VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/lang.js",
  "contributes": {
    "commands": [
      {
        "command": "chinstrap.set_exe",
        "title": "Chinstrap: Link Compiler"
      },

      {
        "command": "chinstrap.compile",
        "title": "Chinstrap: Compile into HLSL"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "chinstrap.set_exe",
          "when": "editorLangId == chinstrap"
        },

        {
          "command": "chinstrap.compile",
          "when": "editorLangId == chinstrap"
        }
      ]
    },
    "languages": [{
      "id": "chinstrap",
      "aliases": ["Chinstrap", "chinstrap"],
      "extensions": [".csp"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "chinstrap",
      "scopeName": "source.chinstrap",
      "path": "./syntaxes/chinstrap.tmLanguage.json"
    }],
    "snippets": [
      {
        "language": "chinstrap",
        "path": "./snippets/chinstrap.code-snippets.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.105.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
